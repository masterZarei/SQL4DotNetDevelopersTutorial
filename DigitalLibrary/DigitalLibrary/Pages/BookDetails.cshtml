@page
@model DigitalLibrary.Pages.BookDetailsModel
@{
}
<section class="container">
    <div class="flex mt-4">
        <div class="w-1/3 prodctdet">
            <table class="table my-4">
                <tbody class="bg-gray-50 text-sm">
                    <tr>
                        <th class="border-b px-2 py-3 text-right">نام</th>
                        <td class="tableBorder px-2 py-3">@Model.BookDto.Title</td>
                    </tr>
                    <tr>
                        <th class="border-b px-2 py-3 text-right">نام نویسنده</th>
                        <td class="tableBorder px-2 py-3">@Model.BookDto.Author</td>
                    </tr>
                    <tr>
                        <th class="px-2 py-3 text-right">ژانر</th>
                        <td class="px-2 tableBorder py-3">@Model.BookDto.CategoryTitle</td>
                    </tr>
                </tbody>
            </table>
            <form method="post">
                <input type="hidden" asp-for="BookDto.Id" />
                <input type="hidden" asp-for="BookDto.FileUrl" />
            <button type="submit" class="bg-indigo-600 w-72 py-2 rounded rounded-md text-white"> دانلود </button>

            </form>
        </div>
        <div class="w-2/3">
            <img src="~/Assets/Pictures/@Model.BookDto.ImageUrl" class="bookPic mx-auto border-2 rounded-md" alt="image">
        </div>
    </div>
</section>