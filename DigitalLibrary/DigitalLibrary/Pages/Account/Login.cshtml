@page
@model DigitalLibrary.Pages.Account.LoginModel
@{
}
<div class="login w-72 sm470:w-80 xs600:w-96 h-full mt-40 mx-auto flex justify-center items-center">
    <form method="post" class="customForm w-full m-auto bg-white rounded-t-md rounded-b-md overflow-hidden">
        <div asp-validation-summary="All"></div>
        <div class="formHead h-24 bg-indigo-600 w-100">
            <h2 class="formTitle text-center text-xl font-bold text-white flex justify-center items-center h-full">ورود به سایت </h2>
        </div>
        <div class="border px-6">
            <!--                شماره تلفن-->
            <div class="my-4 border-b-2 border-indigo-700 relative flex flex-col items-stretch w-full">
                <label class="customLabel">شماره موبایل </label>
                <input asp-for="LoginDto.PhoneNumber" type="text" class="customInput mb-2">
                <span class="text-red-600" asp-validation-for="LoginDto.PhoneNumber"></span>

            </div>
            <!--                 رمز عبور-->
            <div class="my-4 border-b-2 border-indigo-700 relative flex flex-col items-stretch w-full">
                <label class="customLabel"> رمز عبور </label>
                <input asp-for="LoginDto.Password" type="text" class="customInput mb-2">
                <span class="text-red-600" asp-validation-for="LoginDto.Password"></span>
            </div>
            <button type="submit" class="formSubmit border-2 border-indigo-600 text-base w-full py-4 text-white mx-auto block duration-200 bg-indigo-600 text-center font-semibold transition-all ease-in-out rounded-sm hover:bg-white hover:text-indigo-600">ورود</button>
            <p class="my-4"> حساب کاربری ندارید ؟ <a asp-page="Register" class="text-indigo-700">ثبت نام</a> </p>
        </div>
    </form>
</div>