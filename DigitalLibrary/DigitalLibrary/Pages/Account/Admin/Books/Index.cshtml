@page
@model DigitalLibrary.Pages.Account.Admin.Books.IndexModel
@{
}
<div class="container pt-8">
    <ul class="breadcrumb">
        <li><a class="hover:text-blue-600 transition" href="~/">خانه</a> <span class="text-gray-500">/</span></li>
        <li><a class="hover:text-blue-600 transition" href="~/Account/Admin">پنل</a> <span class="text-gray-500">/</span></li>
        <li><a class="hover:text-blue-600 transition" href="~/Account/Admin/Books">کتاب ها</a> <span class="text-gray-500">/</span></li>
    </ul>
    <div class="block tablet:flex justify-between">
       <partial name="_Panel" />
        <div class="w-full tablet:w-9/12 px-3 mt-5">
            <div class="PanelCard border rounded p-3">
                <!--                تایتل-->
                <div class="PanelCard-header flex justify-between">
                    <a asp-page="Create" class="btnSolid bg-indigo-400 text-white mr-3">
                        <i class="fas fa-plus align-middle"></i>
                        ایجاد
                    </a>
                    <h2 class="text-lg block mx-auto">مدیریت کتاب ها </h2>
                </div>
                <div class="PanelCard-body pt-5">
                    <div class="overflow-auto">
                        @if(Model.BookDto.Count >0)
                        {
                            <table class="table text-center">
                                <thead class="bg-gray-200">
                                    <tr>
                                        <th class="tableBorder p-3">عکس</th>
                                        <th class="tableBorder p-3">نام</th>
                                        <th class="tableBorder p-3">نام نویسنده</th>
                                        <th class="tableBorder p-3">مدیریت</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-gray-50">
                                    @foreach (var item in Model.BookDto)
                                    {
                                        <tr class="hover:bg-gray-100 transition">
                                            <!--    عکس-->
                                            <td class="tableBorder">
                                                <img src="~/Assets/Pictures/@item.ImageUrl" alt="productImg" class="w-16 h-16 block mx-auto">
                                            </td>
                                            <!--    نام-->
                                            <td class="tableBorder"> @item.Title </td>
                                            <!--    نام نویسنده-->
                                            <td class="tableBorder">@item.Author</td>
                                            <!--    مدیریت-->
                                            <td class="tableBorder">
                                                <div class="flex items-center justify-center">
                                                    <a asp-page="Details" asp-route-Id="@item.Id" class="btnGroup rounded-r bg-indigo-600 hover:bg-indigo-700 text-white">
                                                        <i class="fas fa-list"></i>
                                                    </a>
                                                    <a asp-page="Edit" asp-route-Id="@item.Id" class="btnGroup bg-yellow-400 hover:bg-yellow-500">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-page="Delete" asp-route-Id="@item.Id" class="btnGroup rounded-l bg-red-600 hover:bg-red-700 text-white">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>

                        }
                        else
                        {
                            <h3 class="alertInfo text-center"> کتابی موجود نیست </h3>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>