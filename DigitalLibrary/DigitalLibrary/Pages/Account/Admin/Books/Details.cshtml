@page
@model DigitalLibrary.Pages.Account.Admin.Books.DetailsModel
@{
}
<div class="container pt-8">
    <ul class="breadcrumb">
        <li><a class="hover:text-blue-600 transition" href="~/">خانه</a> <span class="text-gray-500">/</span></li>
        <li><a class="hover:text-blue-600 transition" href="~/Account/Admin">پنل</a> <span class="text-gray-500">/</span></li>
        <li><a class="hover:text-blue-600 transition" href="~/Account/Admin/Books">کتاب ها</a> <span class="text-gray-500">/</span></li>
        <li><a class="hover:text-blue-600 transition" href="#">جزئیات</a></li>
    </ul>
    <div class="block tablet:flex justify-between">
        <partial name="_Panel" />
        <div class="w-full tablet:w-9/12 px-3 mt-5">
            <div class="PanelCard border rounded p-3">
                <!--                تایتل-->
                <div class="PanelCard-header">
                    <h2 class="text-lg">جزئیات کتاب</h2>
                </div>
                <div class="PanelCard-body pt-5">
                    <div class="block tablet:flex justify-between">
                        <div class="w-full tablet:w-1/2 px-2">
                            <!--                                نام-->
                            <div class="flex flex-col mt-3">
                                <label for="name" class="customLabel">نام محصول</label>
                                <input disabled type="text" id="name"
                                       asp-for="BookDto.Title"
                                       class="custominput disabled">
                            </div>
                            <!--                          نام نویسنده-->
                            <div class="flex flex-col mt-3">
                                <label for="PageNumb" class="customLabel">نام نویسنده</label>
                                <input disabled type="text" id="PageNumb"
                                       asp-for="BookDto.Author"
                                       class="custominput disabled">
                            </div>
                            <!--                          توضیحات-->
                            <div class="flex flex-col mt-3">
                                <label for="desc" class="customLabel">توضیحات</label>
                                <textarea type="text" id="desc"
                                          asp-for="BookDto.Description"
                                          class="custominput disabled"></textarea>
                            </div>
                        </div>
                        <div class="w-full tablet:w-1/2 px-2">
                            <!--                                دمو-->
                            <img src="~/Assets/Pictures/@Model.BookDto.ImageUrl" id="imgPreview" class="w-full h-52 block border mt-3 px-2" alt="product">

                            <!--    دسته بندی-->
                            <div class="flex flex-col mt-3">
                                <label for="Category" class="customLabel">دسته بندی</label>
                                <div>
                                    <select disabled asp-for="BookDto.SelectedCategory" asp-items="Model.BookDto.BookCategories"
                                            class="custominput disabled">
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="w-full flex px-2">
                        <div class="w-1/2 py-3 pl-3">
                            <button type="submit" class="subBtn btnSuccess">
                                تایید
                            </button>
                        </div>
                        <div class="w-1/2 py-3 pr-3">
                            <a asp-page="Index" class="subBtn btnDark">
                                بازگشت
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>